{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@nx-starter/shared-utils": ["libs/shared-utils/src/index.ts"],
            "@nx-starter/webapp-auth": ["libs/webapp-auth/src/index.ts"],
            "@nx-starter/webapp-ui": ["libs/webapp-ui/src/index.ts"],
            "@nx-starter/webapp-user": ["libs/webapp-user/src/index.ts"],
            "@nx-starter/shared-models": ["libs/shared-models/src/index.ts"],
            "@nx-starter/webapp-models": ["libs/webapp-models/src/index.ts"],
            "@nx-starter/api-models": ["libs/api-models/src/index.ts"],
            "@nx-starter/webapp-core": ["libs/webapp-core/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
